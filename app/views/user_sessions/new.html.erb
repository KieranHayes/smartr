<h2>Login</h2>
<%= form_for @user_session, :url => user_session_path do |f| %>
  <%#= f.error_messages %>
  <div>
    <%= f.label :login %>
    <%= f.text_field :login %>
    <%= f.error_message_on(:login) %>
  </div>
  <div>  
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.error_message_on(:password) %>
  </div>
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  
  <%= f.submit "Login" %>
<% end %>
<% main_menu :users %>



