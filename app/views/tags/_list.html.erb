<% unless @tags.nil? %>  
  <% @tags.each do |tag| %>
      <div style="width: 25%; float: left">
       <span class="tag">
         <%=tag.count %>x 
         <%=link_to tag, questions_path(:tag => tag.name), :class => "tag" -%>
       </span>
       </div>
    <% end -%>
<% else -%>
<p>Nothing found. I am sorry</p>
<% end -%>
 