<% if comments.present? %>
  <h3><%=t("comments.label.other") %></h3>
  <div id="<%="#{comments.first.commentable.class.name}-comments-#{comments.first.commentable.id}"%>">
  <% if comments.count > 1 %>
    <%=comments_order_menu(session[:comments_order], comments.first.commentable)%><br class="clear" />
  <% end %>
  <a name="<%="#{parent.class.name}-comments-#{parent.id}"%>"></a>
  <% for comment in comments do %>
    <%=render comment -%>
  <% end -%>
<% end -%>
<%= link_to(t("comments.new"), new_comment_path(:comment => { :commentable_type => parent.class.name, 
                                                              :commentable_id => parent.id}),
                                                              :remote => true,
                                                              :class => "comment-new") %>
</div>
