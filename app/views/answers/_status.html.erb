<% if current_user %>
  <% if current_user==answer.question.user %>
    <% if answer == answer.question.answer %>
      <%= link_to_remote("&nbsp;", :url => question_path(answer.question, :answer_id => answer.id, :mode => :toggle_acceptance), :method => :put, :html => {:class => "accepted"}) %>
    <% else%>
       <%= link_to_remote("&nbsp;", :url => question_path(answer.question, :answer_id => answer.id, :mode => :toggle_acceptance), :method => :put, :html => { :class => ""}) %>
    <% end -%>
  <% else %>
    <%= "accepted" if answer.question.answer.present? %>
  <% end -%>
<% end -%>