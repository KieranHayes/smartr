<br class="clear" />
<h2><%= t "user.my_answer" %></h2>
<div class="answer-edit">
  
  <%= form_for(answer, :url => question_answers_path(:question_id => question.id, :friendly_id => question.friendly_id)) do |f| %>
    <div id="wmd-button-bar"></div>
    <div class="<%="error" if f.error_message_on(:body).present? %>">
      <%= f.error_message_on(:body) %>
      <%= f.text_area :body, :id => "wmd-input", :class => "markdown" %>
    </div>
    <%= button_tag t("answer.save"), :type => :submit, :class => "g-button" %>
    <%= link_to t("cancel"), question_path(answer.question), :class => "cancel" if controller.controller_name == "answers"%>
    <br class="clear" />
  <% end -%>
<br class="clear" />
</div>
