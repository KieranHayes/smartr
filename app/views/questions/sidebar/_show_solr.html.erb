<% if related_questions.results.present? %>
  <h3><%= t("sidebar.questions.related") %></h3>
  <ul>
    <% related_questions.results.each do |question| %>
      <li><%= link_to question.name, question_path(:id => question.id, :friendly_id => question.friendly_id)%></li>
    <% end %>
  </ul>
<% end %>