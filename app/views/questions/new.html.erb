<h1>New question</h1>
<div class="question-new">
<% form_for(@question) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label "Enter your question here" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
</div>
<% main_menu :questions %>