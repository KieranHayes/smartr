<h2>New question</h2>
<div class="question-edit">
<% form_for(@question) do |f| %>
  <%= f.error_messages %>
    <h3>Enter your question here</h3>
    <%= f.text_field :name, :class => "text" %>
    <h3>Please provide more detail</h3>
    <%= f.text_area :body, :id => "markdown", :class => "markdown" %>
    <h3>Live preview</h3>
    <div class="wmd-preview"></div>
      <%= f.hidden_field :body_plain, :class => "plain" %>
    <h3>Tags</h3>
    <%= f.text_field :tag_list, :class => "text tags" %> e.g. typo3, ruby
    <%= f.submit 'Save', :class => "save" %>
    <br class="clear" />
<% end %>
</div>
<% main_menu :questions %>
<% content_for :sidebar, render(:partial => "/questions/sidebar/new") %>