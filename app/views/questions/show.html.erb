<div class="question">
  <h2>  <%=h @question.name %></h2>
  <div class="body">
    <%=h @question.body %>
  </div>

<p>
  <b>User:</b>
  <%=h @question.user.login %>
</p>

<p>
  <b>Tags:</b>
  <%@question.tags.each do |tag| %>
  <%= link_to tag, "#" %>
  <% end -%>
</p>
</div>
<% if @question.answers.length > 0 %>
<br class="clear" />
<h2>Answers</h2>
<% @question.answers.each do |answer| -%>
  <div class="answer-list">
    <div class="stats">
      <div class="votes">
        <%= link_to "up", "#{}", :class => "up" -%>  
        <div class="counter">x</div>
        <%= link_to "down", "#{}", :class => "down" -%>  
      </div>
    </div>
    <div class="body">
      <%= h answer.body %>
      <span class="user"></span>
       <br class="clear" />
    </div>
  </div>
  <br class="clear" />
  <% end -%>
<% end -%>

<% if (current_user.present? && !Answer.is_answered?(@question, current_user)) %>

<% form_for(@question, :html => {:class => "form"}) do |f| %>
  <%= f.error_messages %>
  <%  f.fields_for "answers_attributes[]", Answer.new do |a| %>
    <%= a.hidden_field :user_id, :value => current_user.id %>
    <div class="group">
      <%= f.label :body, "My answer:", :class => "label" %>
      <%= a.text_area :body, :class => 'text_area answer' %>
    </div>
    <% end -%>
    <div class="group navform">
      <%= f.submit 'Save', :class => "awesome green" %>
    </div>

    <% end -%>
    <% end %>

    <%= link_to 'Edit', edit_question_path(@question) %> |
    <%= link_to 'Back', questions_path %>