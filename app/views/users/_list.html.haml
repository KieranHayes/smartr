- users.each do |user|
  %tr
    %td.avatar= link_to image_tag(user.avatar.url(:medium), :border => 0, :align => "left", :class => "thumbnail"), user_path(user)
    %td.link= link_to user.login, user_path(user)
    %td.activity= h(distance_of_time_in_words_to_now(user.last_request_at)) if user.last_sign_in_at?
    %td.number= user.views
    %td.number= user.reputation
