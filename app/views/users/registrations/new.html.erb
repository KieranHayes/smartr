<% title "Register", "... you are almost there!"%>
<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "vertical-form"} ) do |f| %>
  <%= f.inputs do %>
    <%= f.input :login %>
    <%= f.input :email, :hint =>"Enter your email address" %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.inputs "Tags" do %>
    <%= f.input :interesting_tag_list, :input_html => {:class => "span6"} %>
    <%= f.input :uninteresting_tag_list, :input_html => {:class => "span6"} %>
  <% end %>
  <%= f.inputs "Avatar" do %>
    <%= image_tag @user.avatar.url(:medium), :align => :top %>
    <%= f.file_field :avatar %>

  <% end %>
  <%= f.buttons do %>
      <%= f.commit_button :button_html => {:class => "btn large success"} %>
  <% end %>
<% end %>
<% main_menu :users %>
<% content_for :sidebar, render("users/shared/links") %>